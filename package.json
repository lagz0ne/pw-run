{
  "name": "bwsr",
  "version": "0.1.0",
  "description": "Fast CLI for managing browser daemons via Playwright CDP",
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "bwsr": "./dist/bwsr.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outfile dist/bwsr.js --target node --minify --external playwright-core --external chromium-bidi --external electron",
    "dev": "bun run src/index.ts",
    "test": "bun test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lagz0ne/pw-run"
  },
  "keywords": ["browser", "playwright", "cdp", "automation", "cli"],
  "license": "MIT",
  "files": [
    "dist/bwsr.js"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "playwright-core": ">=1.40.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "playwright-core": "^1.57.0"
  },
  "dependencies": {
    "yaml": "^2.3.4"
  }
}
